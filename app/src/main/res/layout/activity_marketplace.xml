<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trading_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.turkfyp.tarcomm2.activity.MarketplaceActivity">

    <View
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_actionbar_background_view_height"
        android:background="@color/guillotine_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar"
            app:contentInsetStart="0dp">

            <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back"
            android:layout_alignParentLeft="true"
            android:onClick="onBackClicked"
            android:layout_marginLeft="15dp"/>

            <com.turkfyp.tarcomm2.widget.CanaroTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Marketplace"
                android:textSize="@dimen/guillotine_item_text_size" />
        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
        android:id="@+id/tab_marketplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/guillotine_background"
        app:tabTextColor="@color/guillotine_background_dark"
        app:tabSelectedTextColor="@color/selected_tabs"
        app:tabMode="fixed"
        app:tabGravity="fill"
        />

        <!--<android.support.v4.view.ViewPager-->
        <!--android:id="@+id/vp_trading"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

        <FrameLayout
            android:id="@+id/marketplace_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </FrameLayout>


    </LinearLayout>
</FrameLayout>