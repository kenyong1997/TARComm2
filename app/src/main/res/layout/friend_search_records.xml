<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:weightSum="2"
    android:background="@drawable/card_no_border"
    android:id="@+id/friendSearchRecords_container">
    <ImageView
        android:id="@+id/imageViewFriendSearch"
        android:layout_width="80dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_height="80dp"
        android:background="@color/darker_white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvFriendSearchName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-light"
            android:layout_weight="0.64"
            android:text="Friend Search Name"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/tvFriend"
                android:text="FRIEND"
                android:layout_marginLeft="21dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginBottom="5dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_width="100dp"
                android:background="@color/darker_white"
                />
            <Button
                android:id="@+id/btnAddFriend"
                android:text="ADD FRIEND"
                android:fontFamily="sans-serif-condensed"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:background="@color/colorPrimaryDark"
                />
            <Button
                android:id="@+id/btnCancelRequest"
                android:text="Cancel Request"
                android:visibility="invisible"
                android:fontFamily="sans-serif-condensed"
                android:layout_alignParentRight="true"
                android:layout_height="40dp"
                android:layout_width="150dp"
                android:layout_marginRight="40dp"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="right"
                android:background="@android:color/white"
                />
            <Button
                android:id="@+id/btnConfirmFriend"
                android:text="Accept Friend"
                android:visibility="invisible"
                android:fontFamily="sans-serif-condensed"
                android:layout_alignParentRight="true"
                android:layout_height="40dp"
                android:layout_width="150dp"
                android:layout_marginRight="40dp"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="right"
                android:background="@android:color/white"
                />

            <ImageView
                android:id="@+id/ivDeleteRequest"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:src="@drawable/ic_delete_black"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>