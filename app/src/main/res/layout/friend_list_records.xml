<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:weightSum="2"
    android:background="@drawable/card_no_border"
    android:id="@+id/friendListRecords_container">
    <ImageView
        android:id="@+id/imageViewLostItemImage"
        android:layout_width="80dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:layout_height="80dp"
        android:background="@color/darker_white"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_friend_name"/>
        <TextView
            android:id="@+id/tvMapEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-light"
            android:layout_weight="0.64"
            android:text="Friend Name"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>