<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:weightSum="2"
    android:background="@drawable/card_no_border"
    android:id="@+id/friendListRecords_container">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageViewFriendList"
        android:layout_width="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:layout_height="80dp"
        android:background="@color/darker_white"
        />

        <ImageView
            android:id="@+id/iconFriend"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imageViewFriendList"
            android:layout_toEndOf="@id/imageViewFriendList"
            android:layout_gravity="center"
            android:src="@drawable/ic_friend_name"/>

        <TextView
            android:id="@+id/tvFriendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/iconFriend"
            android:layout_toEndOf="@id/iconFriend"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="sans-serif-light"
            android:text="Friend Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivDeleteFriend"
            android:layout_width="30dp"
            android:layout_centerVertical="true"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_delete_black" />
    </RelativeLayout>
</LinearLayout>