<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:weightSum="2"
    android:background="@drawable/card_no_border"
    android:id="@+id/friendRequestRecords_container">
    <ImageView
        android:id="@+id/imageViewFriendRequest"
        android:layout_width="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_height="80dp"
        android:background="@color/darker_white"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvFriendRequestName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-light"
            android:layout_weight="0.64"
            android:text="Friend Request Name"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
          <Button
              android:id="@+id/btnAcceptFriend"
              android:text="Accept"
              android:layout_marginLeft="21dp"
              android:layout_marginStart="21dp"
              android:fontFamily="sans-serif-condensed"
              android:layout_marginBottom="5dp"
              android:layout_height="40dp"
              android:layout_width="100dp"
              android:background="@color/colorPrimaryDark"
              />
            <Button
                android:id="@+id/btnRejectFriend"
                android:text="Reject"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:background="@color/darker_white"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>